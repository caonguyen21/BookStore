@model IEnumerable<BookStore.Models.Book>

@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Sách</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active">Sách</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý sách</h5>
                        <a asp-controller="BookManage" asp-action="Insert" class="linkbutton btn btn-primary">Thêm sách</a>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Mã sách</th>
                                    <th scope="col">Tên sách</th>
                                    <th scope="col">Ảnh bìa</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Trạng thái</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/"+item.Image)" alt="Book cover" style="width: 100px; height: 100px;" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            @if (item.Status == "Not available")
                                            {
                                                <div class="status-not-available">@Html.DisplayFor(modelItem => item.Status)</div>
                                            }
                                            else if (item.Status == "Available")
                                            {
                                                <div class="status-available">@Html.DisplayFor(modelItem => item.Status)</div>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="BookManage" asp-action="Details" asp-route-id="@item.BookId" class="linkbutton btn btn-info">Chi tiết</a>
                                            <a asp-controller="BookManage" asp-action="Update" asp-route-id="@item.BookId" class="linkbutton btn btn-warning">Sửa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
<style>
    .status-not-available {
        color: red;
    }

    .status-available {
        color: green;
    }
</style>
