@model BookStore.Models.Publisher

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Nhà xuất bản</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="List">Nhà xuất bản</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin nhà xuất bản</h5>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 label">Tên nhà xuất bản:</div>
                            <div class="col-lg-9 col-md-8">@Model.Name</div>
                        </div>
                        <br />
                        <div class="row">
                            <label class="col-lg-3 col-md-4 label">Email:</label>
                            <span class="col-lg-9 col-md-8">@Model.Email</span>
                        </div>
                        <br />
                        <div class="row">
                            <label class="col-lg-3 col-md-4 label">Địa chỉ:</label>
                            <span class="col-lg-9 col-md-8">@Model.Address</span>
                        </div>
                        <br />
                        <div class="row">
                            <label class="col-lg-3 col-md-4 label">Số điện thoại:</label>
                            <span class="col-lg-9 col-md-8">@Model.Phone</span>
                        </div>
                        <br />
                        <div class="row">
                            <label class="col-lg-3 col-md-4 label">Trạng thái:</label>
                            @if (@Model.Status == "Inactive")
                            {
                                <span class="col-lg-9 col-md-8">Chưa kích hoạt</span>
                            }
                            else if (@Model.Status == "Active")
                            {
                                <span class="col-lg-9 col-md-8">Đã kích hoạt</span>
                            }
                        </div>
                        <br />
                        <div class="form-group col-sm-2 col-form-label">
                            <a asp-action="List" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
